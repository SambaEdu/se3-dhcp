#! /bin/sh
# postrm script for se3-dhcpd
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <r>overwrit>r> <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge)

### on suppose que l'on est sous debian  ####
WWWPATH="/var/www"
## recuperation des variables necessaires pour interoger mysql ###
if [ -e $WWWPATH/se3/includes/config.inc.php ]; then
	dbhost=`cat $WWWPATH/se3/includes/config.inc.php | grep "dbhost=" | cut -d = -f2 | cut -d \" -f2`
	dbname=`cat $WWWPATH/se3/includes/config.inc.php | grep "dbname=" | cut	-d = -f 2 |cut -d \" -f 2`
 	dbuser=`cat $WWWPATH/se3/includes/config.inc.php | grep "dbuser=" | cut -d = -f 2 | cut -d \" -f 2`
 	dbpass=`cat $WWWPATH/se3/includes/config.inc.php | grep "dbpass=" | cut -d = -f 2 | cut -d \" -f 2`
else
	echo "Fichier de configuration inaccessible, le script ne peut se poursuivre."
	exit 1
fi
##### Remove mysql entry in DHCP slis table
echo "DROP TABLE  se3_dhcp" | mysql -h $dbhost $dbname -u $dbuser -p$dbpass -N
echo "DELETE FROM  params WHERE name REGEXP '^dhcp*'" | mysql -h $dbhost $dbname -u $dbuser -p$dbpass -N
echo "INSERT INTO params VALUES ('', 'dhcp', '0', 0, 'Activation du dhcp', 6)" | mysql -h $dbhost $dbname -u $dbuser -p$dbpass -N
##### REMOVE sudoers entry
if [ "`cat /etc/sudoers | grep SE3DHCP`" ]; then
sed -i 's/^\(www-se3.*\),NOPASSWD:SE3DHCP\(.*\)$/\1\2/'  /etc/sudoers
sed -i '/^Cmnd_Alias SE3DHCP.*$/d' /etc/sudoers
service sudo restart
fi
#####


exit 0

	;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)	
	;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2 | grep -v NOTICE
        exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
